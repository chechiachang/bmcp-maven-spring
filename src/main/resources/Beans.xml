<?xml version="1.0" encoding="UTF-8"?>


<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="helloWorld" 
          class="com.ccc.bmcp.maven.spring.helloworld.HelloWorld"
          init-method="init" 
          destroy-method="destroy"
          scope="singleton">
    </bean>
    <bean class="com.ccc.bmcp.maven.spring.helloworld.InitHelloWorld"/>
    
    <bean id="helloTaiwan" class="com.ccc.bmcp.maven.spring.hellotaiwan.HelloTaiwan">
        <property name="message1" value="Hello Taiwan!"></property>
        <property name="message2" value="Ni How, Taiwan!"></property>
    </bean>
    <bean id="helloJapan" class="com.ccc.bmcp.maven.spring.hellotaiwan.HelloJapan" parent="helloTaiwan">
        <property name="message1" value="Hello Japan!"></property>
        <property name="message3" value="Konichiwa Japan!"></property>
    </bean>
    
    <bean id="textEditor" class="com.ccc.bmcp.maven.spring.texteditor.TextEditor">
        <constructor-arg ref="spellChecker"/>
    </bean>
    <bean id="spellChecker" class="com.ccc.bmcp.maven.spring.texteditor.SpellChecker"/>
</beans>
